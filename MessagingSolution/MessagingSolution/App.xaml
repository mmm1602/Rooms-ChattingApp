<Application x:Class="ChatClient.App"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:v="clr-namespace:ChatClient.MVVM.View"
         xmlns:vm="clr-namespace:ChatClient.MVVM.ViewModel"
         StartupUri="./MVVM/View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Themes/ChatViewItem.xaml"/>
                <ResourceDictionary Source="./Themes/CustomScrollbar.xaml"/>
                <ResourceDictionary Source="./Themes/ContactItem.xaml"/>
                <ResourceDictionary Source="./Themes/CustomTextBox.xaml"/>
                <ResourceDictionary Source="./Themes/CustomUsernameBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>